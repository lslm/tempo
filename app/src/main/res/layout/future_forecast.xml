<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="72dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:id="@+id/future_forecast"
    android:orientation="vertical"
    android:text="TER"
    android:textSize="16sp">

    <TextView
        android:id="@+id/future_forecast_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TER"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/future_forecast_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_wb_sunny_24"
        tools:src="@drawable/baseline_wb_sunny_24" />

    <TextView
        android:id="@+id/future_forecast_max_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30ยบ"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/future_forecast_min_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30ยบ"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
